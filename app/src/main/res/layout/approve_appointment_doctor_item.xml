<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="4dp"
    android:layout_marginEnd="4dp"
    android:layout_marginTop="6dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/custom_button_border"
        android:padding="16dp">

        <TextView
            android:id="@+id/text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Patient Name : "
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text_view_item_approve_appointment_patient_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/text1"
            android:layout_alignBottom="@id/text1"
            android:layout_toEndOf="@id/text1"
            android:gravity="center_vertical"
            android:text="Nirmal Kumar"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text2"
            android:layout_alignTop="@id/text_view_item_approve_patient_contact"
            android:layout_alignBottom="@id/text_view_item_approve_patient_contact"
            android:gravity="center_vertical"
            android:text="Patient Contact No : "
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text_view_item_approve_patient_contact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_view_item_approve_appointment_patient_name"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@id/text2"
            android:text="+917008000094"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text1"
            android:layout_alignTop="@id/text_view_item_approve_appointment_date"
            android:layout_alignBottom="@id/text_view_item_approve_appointment_date"
            android:gravity="center_vertical"
            android:text="Appointment Date : "
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text_view_item_approve_appointment_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_view_item_approve_patient_contact"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@id/text2"
            android:text="24/03/2013"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text3"
            android:layout_alignTop="@id/text_view_item_approve_appointment_time"
            android:layout_alignBottom="@id/text_view_item_approve_appointment_time"
            android:gravity="center_vertical"
            android:text="Appointment Time : "
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text_view_item_approve_appointment_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_view_item_approve_appointment_date"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@id/text3"
            android:text="9:00 am"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Button
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@drawable/reject_button_border"
            android:layout_height="40dp"
            android:layout_below="@id/text_view_item_approve_appointment_time"
            android:text="Reject"
            android:layout_toStartOf="@id/button_item_accept_appointment"
            android:id="@+id/button_item_reject_appointment"/>

        <Button
            android:layout_alignParentEnd="true"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_below="@id/text_view_item_approve_appointment_time"
            android:text="Accept"
            android:layout_marginStart="10dp"
            android:textColor="@android:color/white"
            android:layout_marginTop="16dp"
            android:textStyle="bold"
            android:background="@drawable/accept_button_border"
            android:id="@+id/button_item_accept_appointment"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>