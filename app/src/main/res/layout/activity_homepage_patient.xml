<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#81D4FA">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/image_home"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:src="@drawable/doctor" />

        <TextView
            android:id="@+id/homet1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/image_home"
            android:layout_marginStart="20dp"
            android:layout_marginTop="70dp"
            android:gravity="center_vertical"
            android:text="Hello Patient!"
            android:textColor="@android:color/black"
            android:textSize="32sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text_view_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/homet1"
            android:layout_marginStart="20dp"
            android:layout_marginTop="12dp"
            android:text="Name"
            android:textColor="@android:color/black"
            android:textSize="24sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/ViewMyDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/image_home"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/custom_button_border"
            android:checkable="false"
            android:drawableLeft="@drawable/ic_approve"
            android:gravity="center"
            android:paddingStart="12dp"
            android:paddingTop="25dp"
            android:paddingEnd="12dp"
            android:paddingBottom="25dp"
            android:text="View My Details"
            android:textAllCaps="false"
            android:textColor="@android:color/black"
            android:textSize="25sp"
            android:textStyle="bold"
            app:backgroundTint="@color/light_blue" />

        <Button
            android:id="@+id/ViewMyMeds"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ViewMyDetails"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/custom_button_border"
            android:drawableLeft="@drawable/ic_viewmeds"
            android:gravity="center"
            android:paddingStart="8dp"
            android:paddingTop="25dp"
            android:paddingEnd="12dp"
            android:paddingBottom="25dp"
            android:text="View My Meds"
            android:textAllCaps="false"
            android:textColor="@android:color/black"
            android:textSize="25sp"
            android:textStyle="bold"
            app:backgroundTint="@color/light_blue" />


        <Button
            android:id="@+id/CallAmbulance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ViewMyMeds"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/custom_button_border"
            android:drawableLeft="@drawable/ic_siren"
            android:gravity="center"
            android:paddingStart="8dp"
            android:paddingTop="25dp"
            android:paddingEnd="12dp"
            android:paddingBottom="25dp"
            android:text="Call Ambulance"
            android:textAllCaps="false"
            android:textColor="@android:color/black"
            android:textSize="25sp"
            android:textStyle="bold"
            app:backgroundTint="@color/light_blue" />

        <Button
            android:id="@+id/Medical_records"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/CallAmbulance"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/custom_button_border"
            android:drawableLeft="@drawable/ic_medical_record"
            android:gravity="center"
            android:paddingStart="12dp"
            android:paddingTop="25dp"
            android:paddingEnd="12dp"
            android:paddingBottom="25dp"
            android:text="Medical Records"
            android:textAllCaps="false"
            android:textColor="@android:color/black"
            android:textSize="25sp"
            android:textStyle="bold"
            app:backgroundTint="@color/light_blue" />

    </RelativeLayout>

</ScrollView>